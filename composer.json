{
  "name": "silverstripe/siteconfig",
  "description": "Site wide settings administration.",
  "type": "silverstripe-module",
  "keywords": [
    "silverstripe",
    "siteconfig"
  ],
  "authors": [
    {
      "name": "Will Rossiter",
      "email": "will@fullscreen.io"
    }
  ],
  "require": {
    "silverstripe/framework": "^4.0@dev",
    "silverstripe/admin": "^1.0@dev"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.7"
  },
  "autoload": {
    "psr-4": {
      "SilverStripe\\SiteConfig\\": "code/",
      "SilverStripe\\SiteConfig\\Tests\\": "tests/php/"
    },
    "classmap": [
      "tests/behat/"
    ]
  },
  "scripts": {
    "lint": "phpcs code/ tests/",
    "lint-clean": "phpcbf code/ tests/"
  },
  "extra": {
    "installer-name": "siteconfig",
    "branch-alias": {
      "dev-master": "4.1.x-dev"
    }
  },
  "license": "BSD-3-Clause"
}
